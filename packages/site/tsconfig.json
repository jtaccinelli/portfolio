{
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "references": [{"path": "../cms"}],
  "compilerOptions": {
    "composite": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@site/*": ["./*"],
      "@app/*": [
        "./app/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    },
    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
