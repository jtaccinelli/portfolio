{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
    },
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "jsx": "react",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "exclude": ["node_modules", "dist"]
}
