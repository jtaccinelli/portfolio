{
  "name": "@portfolio/schemas",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "dependencies": {
    "@sanity/icons": "^2.2.2",
    "sanity": "^3.7.0"
  },
  "devDependencies": {
    "eslint": "^8.6.0",
    "prettier": "^2.8.3",
    "tsup": "^6.6.3",
    "typescript": "^4.0.0"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "dts": true,
    "format": [
      "esm",
      "cjs"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  }
}
