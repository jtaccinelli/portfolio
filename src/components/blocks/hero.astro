---
import type { CTA } from "@root/types";
import Cta from "../cta.astro";

type Props = {
  heading: string;
  blurb: string;
  emoji: string;
  cta?: CTA;
};

const { heading, blurb, emoji, cta } = Astro.props;
---

<div class="flex flex-col items-start gap-4 py-16 md:px-8">
  <span aria-label="Emoji" class="text-2xl font-medium">{emoji}</span>
  <h1 class="text-2xl font-medium">{heading}</h1>
  <p class="mb-12 text-2xl font-medium text-gray-500">{blurb}</p>
  {cta ? <Cta label={cta.label} url={cta.url} /> : null}
</div>
