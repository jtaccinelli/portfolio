---
import type { CTA } from "@root/types";
import Cta from "./cta.astro";

type Props = {
  layout: "graphic" | "simple";
  ctas: CTA[];
};

const { ctas } = Astro.props;
---

<div class="flex flex-col items-start justify-center gap-8 bg-gray-950">
  <h1 class="max-w-xl whitespace-pre-wrap text-3xl leading-relaxed">
    <slot />
  </h1>
  {ctas.map((item) => <Cta label={item.label} url={item.url} />)}
</div>
